<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.estacionamento.controller.ListaController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Veículos no Pátio" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TableView fx:id="tblVeiculos" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colPlaca" text="Placa" prefWidth="100"/>
            <TableColumn fx:id="colModelo" text="Modelo" prefWidth="150"/>
            <TableColumn fx:id="colCor" text="Cor" prefWidth="100"/>
            <TableColumn fx:id="colTipo" text="Tipo" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Atualizar" onAction="#atualizarTabela"/>
        <Button text="Dar Saída" onAction="#handleSaida" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    </HBox>
</VBox>