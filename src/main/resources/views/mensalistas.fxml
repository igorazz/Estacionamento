<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.estacionamento.controller.MensalistaController" style="-fx-background-color: white;">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Cadastro de Mensalista" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Separator/>

    <GridPane hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="120" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNome" promptText="Nome completo" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>

        <Label text="CPF:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCpf" promptText="000.000.000-00" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Placa:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPlaca" promptText="ABC-1234" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Vencimento:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpVencimento" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>

        <Label text="Mensalidade (R$):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtValor" text="300.00" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Limpar" onAction="#handleCancelar" style="-fx-background-radius: 5;"/>
        <Button text="Salvar Cliente" onAction="#handleSalvar"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
    </HBox>
</VBox>